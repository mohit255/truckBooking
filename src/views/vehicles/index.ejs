<% layout('layout') %>
<div class="d-flex align-items-center justify-content-between mb-3">
  <h3 class="mb-0">Vehicle Master</h3>
  <div class="d-flex gap-2">
    <a href="/vehicles/export<%= Object.keys(query).length > 0 ? '?' + new URLSearchParams(query).toString() : '' %>" class="btn btn-success">
      <i class="bi bi-download"></i> Export CSV
    </a>
    <a href="/vehicles/new" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add Vehicle</a>
  </div>
</div>

<!-- Filters -->
<div class="card shadow-sm mb-3">
  <div class="card-header">
    <h6 class="mb-0"><i class="bi bi-funnel"></i> Filters</h6>
  </div>
  <div class="card-body">
    <form method="GET" class="row g-3">
      <div class="col-md-2">
        <label class="form-label">Vehicle Number</label>
        <input class="form-control" type="text" name="vehicleNumber" placeholder="Vehicle No" value="<%= query?.vehicleNumber || '' %>">
      </div>
      <div class="col-md-2">
        <label class="form-label">Vehicle Type</label>
        <select class="form-select" name="type">
          <option value="">All Types</option>
          <option value="CONTAINER_32FT" <%= query?.type === 'CONTAINER_32FT' ? 'selected' : '' %>>32ft Container</option>
          <option value="OPEN_20FT" <%= query?.type === 'OPEN_20FT' ? 'selected' : '' %>>20ft Open Body</option>
          <option value="OPEN_22FT" <%= query?.type === 'OPEN_22FT' ? 'selected' : '' %>>22ft Open Body</option>
          <option value="TRAILER" <%= query?.type === 'TRAILER' ? 'selected' : '' %>>Trailer</option>
          <option value="OTHER" <%= query?.type === 'OTHER' ? 'selected' : '' %>>Other</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Owner Name</label>
        <input class="form-control" type="text" name="malik" placeholder="Owner Name" value="<%= query?.malik || '' %>">
      </div>
      <div class="col-md-2">
        <label class="form-label">Contact Number</label>
        <input class="form-control" type="text" name="contact" placeholder="Contact Number" value="<%= query?.contact || '' %>">
      </div>
      <div class="col-md-2">
        <label class="form-label">Firm</label>
        <input class="form-control" type="text" name="firm" placeholder="Firm Name" value="<%= query?.firm || '' %>">
      </div>
      <div class="col-md-2">
        <label class="form-label">Status</label>
        <select class="form-select" name="status">
          <option value="">All Status</option>
          <option value="active" <%= query?.status === 'active' ? 'selected' : '' %>>Active</option>
          <option value="inactive" <%= query?.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Source City</label>
        <select class="form-select" name="sourceCity">
          <option value="">All Cities</option>
          <% (cities || []).forEach(c => { %>
            <option value="<%= c.id %>" <%= query?.sourceCity == c.id ? 'selected' : '' %>><%= c.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-2">
        <label class="form-label">Destination City</label>
        <select class="form-select" name="destinationCity">
          <option value="">All Cities</option>
          <% (cities || []).forEach(c => { %>
            <option value="<%= c.id %>" <%= query?.destinationCity == c.id ? 'selected' : '' %>><%= c.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="col-md-3">
        <label class="form-label">General Search</label>
        <input class="form-control" type="text" name="q" placeholder="Search in all fields" value="<%= query?.q || '' %>">
      </div>
      <div class="col-md-2">
        <label class="form-label">&nbsp;</label>
        <div class="d-flex gap-2">
          <button type="submit" class="btn btn-primary btn-sm flex-fill"><i class="bi bi-search"></i> Filter</button>
          <a href="/vehicles" class="btn btn-outline-secondary btn-sm"><i class="bi bi-x-lg"></i> Clear</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- Summary Stats -->
<div class="row mb-3">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body text-center">
        <h5 class="card-title"><%= vehicles.length %></h5>
        <p class="card-text">Total Vehicles</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body text-center">
        <h5 class="card-title"><%= vehicles.filter(v => v.isActive).length %></h5>
        <p class="card-text">Active Vehicles</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-warning text-white">
      <div class="card-body text-center">
        <h5 class="card-title"><%= vehicles.filter(v => !v.isActive).length %></h5>
        <p class="card-text">Inactive Vehicles</p>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body text-center">
        <h5 class="card-title"><%= vehicles.filter(v => v.preferredRouteSourceCity && v.preferredRouteDestinationCity).length %></h5>
        <p class="card-text">With Routes</p>
      </div>
    </div>
  </div>
</div>

<div class="table-responsive card shadow-sm">
  <table class="table table-hover table-striped mb-0">
    <thead class="table-light">
      <tr>
        <th>#</th>
        <th>Vehicle No</th>
        <th>Type</th>
        <th>Firm</th>
        <th>Owner</th>
        <th>Contact</th>
        <th>Route</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% if (vehicles.length === 0) { %>
        <tr>
          <td colspan="9" class="text-center py-4">
            <div class="text-muted">
              <i class="bi bi-truck display-4"></i>
              <p class="mt-2">No vehicles found matching your filters</p>
              <a href="/vehicles" class="btn btn-outline-primary btn-sm">Clear Filters</a>
            </div>
          </td>
        </tr>
      <% } else { %>
        <% vehicles.forEach(v => { %>
          <tr>
            <td><%= v.id %></td>
            <td><%= v.vehicleNumber %></td>
            <td><span class="badge text-bg-secondary"><%= v.vehicleType %></span></td>
            <td><%= v.firm || '-' %></td>
            <td><%= v.ownerName %></td>
            <td><a href="tel:<%= v.ownerContact %>"><%= v.ownerContact %></a></td>
            <td>
              <% const src = v.preferredRouteSourceCity?.name; const dst = v.preferredRouteDestinationCity?.name; %>
              <%= src && dst ? `${src} â†’ ${dst}` : (src || dst || '-') %>
            </td>
            <td>
              <% if (!v.isActive) { %>
                <span class="badge text-bg-secondary">Inactive</span>
              <% } else { %>
                <span class="badge text-bg-success">Active</span>
              <% } %>
            </td>
            <td><a class="btn btn-sm btn-outline-secondary" href="/vehicles/<%= v.id %>/edit"><i class="bi bi-pencil"></i></a></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>


